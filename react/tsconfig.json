{
  "compilerOptions": {
    "alwaysStrict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "es2017",
      "dom",
      "es2018.promise"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "allowJs": true,
    "checkJs": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./typings/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts",
    "./*.json",
    "./**/*.css",
    "./**/**/*.css",
    "./*.css",
    "../*.css"
  ],
  "typeAcquisition": {
    "enable": false
  }
}